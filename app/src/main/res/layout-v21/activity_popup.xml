<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="300dp"
    android:layout_height="320dp"
    android:layout_gravity="center"
    android:background="@drawable/background_popup">

    <Button
        android:id="@+id/chat_button"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="#68656E"
        android:text="채팅방"
        android:textColor="#FFFFFF"
        android:textSize="16dp" />

    <LinearLayout
        android:id="@+id/hostView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@+id/profile_image">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="호스트: " />

        <TextView
            android:id="@+id/hostName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
    </LinearLayout>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_image"
        android:layout_marginLeft="20dp"
        android:text="title"
        android:textSize="22dp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/number_of_people"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/profile_image"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/hostView"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/NoP_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/profile_image"
            android:layout_marginRight="10dp"
            android:text="모집인원" />

        <TextView
            android:id="@+id/currentNOP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" / "
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/targetNOP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textStyle="bold"/>

    </LinearLayout>

    <TextView
        android:id="@+id/userAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:text="OO동 XX아파트" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line"
        android:layout_marginHorizontal="20dp"
        android:text="description" />

    <View
        android:id="@+id/line"
        android:layout_width="270dp"
        android:layout_height="3dp"
        android:layout_below="@id/userAddress"
        android:layout_centerInParent="true"
        android:layout_marginVertical="10dp"
        android:background="#9C9B9B" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginVertical="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/polarbear"
        app:civ_border_color="#FF000000" />

</RelativeLayout>