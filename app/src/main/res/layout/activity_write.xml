<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/topPanel"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/common_google_signin_btn_text_light_disabled">

        <Button
            android:id="@+id/back_button"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="취소"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:text="글 작성"
            android:textSize="10pt" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="10dp">

        <!-- 글 제목-->
        <EditText
            android:id="@+id/write_title"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:hint="제목을 입력하세요." />

        <LinearLayout
            android:id="@+id/pickerPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="5dp"
            android:layout_below="@+id/write_title">

            <Spinner
                android:id="@+id/category"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="2"
                android:entries="@array/WritingCategory">
            </Spinner>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="목표인원"
                android:textSize="18dp"/>

            <NumberPicker
                android:id="@+id/targetNoP"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@+id/write_title"
                android:layout_alignRight="@+id/category">
            </NumberPicker>
        </LinearLayout>

        <EditText
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pickerPanel"
            android:background="@null"
            android:hint="글을 입력해주세요." />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:text="저장"
            android:layout_gravity="center|bottom"
            />
    </RelativeLayout>


</LinearLayout>